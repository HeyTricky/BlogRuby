<%= form_for [@user, @user.posts.build] do |f| %>
	<%= render 'shared/profile_post_error_messages' %>

	<div class="form-group">
		<%= f.label 'Название', :id => :title%>
		<%= f.text_field :title, :class => 'form-control'%>
	</div>
	<div class="form-group">
		<%= f.label 'Текст' %><br>
		<%= f.text_area :text, :rows => 5, :class => 'form-control' %>
	</div>
	<div class="form-group text-center">
		<%= f.submit 'Сохранить', :class => 'btn btn-info my-btn'%>
	</div>
<% end %>