<h1>Listing articles</h1>
<% if can? :create, Post %>
<%= link_to 'New post', new_post_path %>
<% end%>

<table>
  <tr>
    <th>Автор</th>
    <th>Название</th>
    <th>Содержимое</th>
  </tr>
  
  <% @posts.each do |post| %>
  <tr>
    <td><%= post.user.name %></td>
    <td><%= post.title %></td>
    <td><%= post.text %></td>
    <% if can? :read, post %>
    <td><%= link_to 'Show', post_path(post) %></td>
    <% end %>
    <% if can? :update, post %>
    <td><%= link_to 'Edit', edit_post_path(post) %></td>
    <%end%>
    <% if can? :destroy, post %>
    <td><%= link_to 'Destroy', post_path(post),
      method: :delete,
      data: { confirm: 'Are you sure?' } %></td>
      <% end %>
    </tr>
    <% end %>
  </table>

