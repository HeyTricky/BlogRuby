<div class="container">
  <div class="form-inline">
    <div class="form-group">
      <h1>Последние статьи</h1>
    </div>
    <div class="form-group btn-margin">
      <% if can? :create, Post %>
      <%= link_to 'Создать статью', new_post_path, :class => "btn btn-info my-btn" %>
      <% end%>
    </div>
  </div>
</div>
<div>
  <ul class="posts">
      <%= render @posts %>
  </ul>
</div>
<%= will_paginate @posts %>
