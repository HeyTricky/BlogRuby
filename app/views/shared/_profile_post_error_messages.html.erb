<% if @user.posts.build.errors.any? %>
<div id="error_explanation">
  <div class="alert alert-error">
    The form contains <%= pluralize(@user.posts.build.errors.count, "error") %>.
  </div>
  <ul>
    <% @user.posts.build.errors.full_messages.each do |msg| %>
    <li>* <%= msg %></li>
    <% end %>
  </ul>
</div>
<% end %>